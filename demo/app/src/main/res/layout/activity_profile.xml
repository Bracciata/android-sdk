             android:layout_height="match_parent"
             android:background="#eeeeee"
             tools:context="com.loginradius.demo.ProfileActivity">

    <ScrollView
        android:id="@+id/svContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:visibility="gone">

        <LinearLayout
