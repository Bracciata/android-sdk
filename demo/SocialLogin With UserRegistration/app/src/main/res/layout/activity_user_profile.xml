<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.loginradius.registrationsdk.UserProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/sc"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/re"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin10"
            android:paddingLeft="@dimen/margin20"
            android:paddingBottom="@dimen/margin20"
            android:paddingRight="@dimen/margin20">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                android:id="@+id/profile_image1"
                android:layout_width="100dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/dd"
                android:layout_height="@dimen/profile_image_height"/>
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"

                android:layout_height="@dimen/profile_image_height"/>
            </RelativeLayout>
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_image"
                android:layout_marginTop="@dimen/margin15"
                android:focusable="true"
                android:orientation="horizontal"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardCornerRadius="8dp">
                <TextView
                    android:id="@+id/name_view"
                    android:text="LoginRadius"
                    android:textSize="@dimen/text_Size20"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:id="@+id/email_layout"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_layout"
                android:layout_marginTop="@dimen/margin15"
                android:focusable="true"
                android:orientation="horizontal"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardCornerRadius="8dp">
                <TextView
                    android:id="@+id/email_view"
                    android:text="test@gmail.com"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/text_Size17"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:id="@+id/mobile_layout"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_layout"
                android:layout_marginTop="@dimen/margin15"
                android:focusable="true"
                android:orientation="horizontal"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardCornerRadius="8dp">
                <TextView
                    android:id="@+id/mobile_view"
                    android:text="123456789"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/text_Size17"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Logout"
                android:id="@+id/logout"
                android:textSize="20dp"
                android:layout_below="@+id/mobile_layout"
                android:textAllCaps="false"
                android:textColor="#000"
                android:background="@color/colorblue"
                android:layout_marginTop="15dp"
                />




        </LinearLayout>
    </ScrollView>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:layout_below="@+id/sc"
        android:layout_marginTop="25dp" />








</RelativeLayout>
